<%- include('./partials/header.ejs') %>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1>Create Products</h1>
            <form class="mt-3" method="POST" action="/products/save">
                <div class="form-group row">
                    <label for="title" class="col-sm-2 ">Title</label>
                    <div class="col-sm-10">
                    <input type="text"  class="form-control" id="title" name="title" placeholder="Please enter a title." required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="price" class="col-sm-2">Price</label>
                    <div class="col-sm-10">
                    <input type="text"  class="form-control" id="price" name="price" placeholder="Please enter a price." required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="thumbnail" class="col-sm-2">Thumbnail</label>
                    <div class="col-sm-10">
                    <input type="text"  class="form-control" id="thumbnail" name="thumbnail" placeholder="Please enter a thumbnail" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="/products/list" type="button" class="btn btn-primary">View List</a>

        </form>
        </div>
    </div>
<%- include('./partials/footer.ejs') %>