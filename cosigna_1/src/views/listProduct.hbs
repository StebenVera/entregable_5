{{>header}}
    {{#if response.status}}
        <div class="jumbotron jumbotron-fluid">
        <h1>Vista de Productos</h1>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Photo</th>
                </tr>
            </thead>
            <tbody>
                {{#each response.products}}
                    <tr>
                        <th>{{this.title}}</th>
                        <th>{{this.price}}</th>
                        <th>
                            <img src="{{this.thumbnail}}">
                        </th>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    {{else}}
        <h1>There is no product</h1>
    {{/if}}
    <a href="/products" type="button" class="btn btn-primary"> Go back to</a>
{{>footer}}